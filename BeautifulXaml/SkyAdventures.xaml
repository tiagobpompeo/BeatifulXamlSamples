                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <AbsoluteLayout Grid.Row="0" Grid.ColumnSpan="2">
                        <Image Source="background1" Aspect="Fill" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
                        <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Padding="20" AbsoluteLayout.LayoutBounds=".5,.5,1,1" AbsoluteLayout.LayoutFlags="All">
                            <Image Source="logo" WidthRequest="55" HorizontalOptions="Start" Margin="0, 0, 30, 0" />
                            <Label Text="MOUNT&#xD;EVEREST" TextColor="White" Font="Bold, 30" HorizontalOptions="Start" />
                        </StackLayout>
                    </AbsoluteLayout>
                    <AbsoluteLayout Grid.Row="1" Grid.ColumnSpan="2">
