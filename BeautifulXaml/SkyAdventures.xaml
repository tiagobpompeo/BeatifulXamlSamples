                            <Label Text="GRAND&#xD;CANYON" TextColor="White" Font="Bold, 30" HorizontalOptions="Start" />
                        </StackLayout>
                    </AbsoluteLayout>
                    <AbsoluteLayout Grid.Row="4" Grid.ColumnSpan="2">
                        <Image Source="background5" Aspect="Fill" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
                        <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Padding="20" AbsoluteLayout.LayoutBounds=".5,.5,1,1" AbsoluteLayout.LayoutFlags="All">
